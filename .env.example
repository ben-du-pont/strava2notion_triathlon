# Strava API Credentials
# Get these from https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REFRESH_TOKEN=your_strava_refresh_token

# Notion API Credentials
# Get your integration token from https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token

# Notion Database IDs
# The Activities database where completed activities are stored
NOTION_ACTIVITIES_DB_ID=your_activities_database_id

# The Planned Activities database where planned workouts are stored
NOTION_PLANNED_DB_ID=your_planned_activities_database_id

# Optional: Number of days to look back for activities (default: 7)
DAYS_BACK=7

# Optional: Dry run mode - set to 'true' to test without creating pages (default: false)
DRY_RUN=false
